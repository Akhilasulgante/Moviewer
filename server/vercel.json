{
  "version": 2,
  "buildCommand": "cd frontend && yarn install && yarn build",
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node"
    },
    {
      "src": "/frontend/pakage.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "index.js"
    },
    {
      "src": "/",
      "dest": "/frontend/build/**"
    },
    {
      "src": "/(.+)",
      "dest": "/frontend/build/$1"
    }
  ]
}
